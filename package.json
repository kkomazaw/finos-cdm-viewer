{
  "name": "finos-cdm-viewer",
  "displayName": "FINOS CDM Viewer",
  "description": "Visual viewer for FINOS Common Domain Model (CDM) written in Rosetta DSL",
  "version": "1.0.0",
  "publisher": "finos-community",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "finos",
    "cdm",
    "rosetta",
    "finance",
    "domain-model"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkomazaw/finos-cdm-viewer"
  },
  "activationEvents": [
    "onLanguage:rosetta"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rosetta",
        "extensions": [
          ".rosetta"
        ],
        "aliases": [
          "Rosetta",
          "rosetta"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rosetta",
        "scopeName": "source.rosetta",
        "path": "./syntaxes/rosetta.tmLanguage.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cdmExplorer",
          "name": "CDM Explorer",
          "when": "workspaceHasRosettaFiles"
        }
      ]
    },
    "commands": [
      {
        "command": "cdm.refreshExplorer",
        "title": "Refresh CDM Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "cdm.showTypeGraph",
        "title": "CDM: Show Type Graph",
        "icon": "$(graph)"
      },
      {
        "command": "cdm.search",
        "title": "CDM: Search Types and Enums",
        "icon": "$(search)"
      },
      {
        "command": "cdm.export",
        "title": "CDM: Export to JSON/Mermaid/GraphViz",
        "icon": "$(export)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cdm.refreshExplorer",
          "when": "view == cdmExplorer",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "cdm.showTypeGraph",
          "when": "resourceLangId == rosetta",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cdm.showTypeGraph",
          "when": "workspaceHasRosettaFiles"
        },
        {
          "command": "cdm.search",
          "when": "workspaceHasRosettaFiles"
        },
        {
          "command": "cdm.export",
          "when": "workspaceHasRosettaFiles"
        }
      ]
    },
    "configuration": {
      "title": "FINOS CDM Viewer",
      "properties": {
        "cdm.sourcePath": {
          "type": "string",
          "default": "",
          "description": "Path to the CDM rosetta source directory"
        },
        "cdm.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching of parsed Rosetta files"
        },
        "cdm.maxCacheSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to cache"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^6.2.2",
    "eslint": "^8.56.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.3"
  }
}
